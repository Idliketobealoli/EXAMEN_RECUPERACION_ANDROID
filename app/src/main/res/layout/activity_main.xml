<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="30dp">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HORARIO DAM"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tv_main" android:layout_marginTop="50dp"
            android:textSize="34sp" android:textAlignment="center" android:textStyle="bold"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/aula" android:id="@+id/iv_aula_main"
            app:layout_constraintTop_toBottomOf="@+id/tv_main" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="30dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/gigachad" android:id="@+id/iv_horarios_main"
            app:layout_constraintTop_toBottomOf="@+id/iv_aula_main"
            app:layout_constraintStart_toStartOf="@+id/iv_aula_main" android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>